    let fourthWorkTl = gsap.timeline({
        // yes, we can add it to an entire timeline!
        scrollTrigger: {
        trigger: "#fourth",
        start: "top center", // when the top of the trigger hits the top of the viewport
        }
    });
    // add animations and labels to the timeline
    fourthWorkTl.addLabel("left")
    fourthWorkTl.from("#fourth_text", {y:400, opacity:0, duration: 1, ease: "expo"})
   .from("#fourth_image", {x:-200, duration:0.7, ease:"expo"}, 0)